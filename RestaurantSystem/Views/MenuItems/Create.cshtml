@model RestaurantSystem.Models.MenuItem

@{
    ViewData["Title"] = "إضافة صنف جديد";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3>
                        <i class="bi bi-plus-circle"></i> إضافة صنف جديد للقائمة
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">
                                    <i class="bi bi-card-heading"></i> اسم الصنف
                                </label>
                                <input asp-for="Name" class="form-control"
                                       placeholder="مثال: برجر لحم، بيتزا مارجريتا..." />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoryId" class="form-label">
                                    <i class="bi bi-bookmark"></i> الفئة
                                </label>
                                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                                    <option value="">-- اختر الفئة --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="bi bi-text-paragraph"></i> الوصف
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="وصف الصنف والمكونات..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label">
                                    <i class="bi bi-cash"></i> السعر (جنيه)
                                </label>
                                <input asp-for="Price" class="form-control" type="number" step="0.01"
                                       placeholder="0.00" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ImageUrl" class="form-label">
                                    <i class="bi bi-image"></i> رابط الصورة (اختياري)
                                </label>
                                <input asp-for="ImageUrl" class="form-control"
                                       placeholder="https://example.com/image.jpg" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    اتركه فارغاً لاستخدام صورة افتراضية
                                </small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="IsAvailable" class="form-check-input" type="checkbox"
                                       role="switch" checked />
                                <label asp-for="IsAvailable" class="form-check-label">
                                    <i class="bi bi-check-circle"></i> الصنف متوفر حالياً
                                </label>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> إلغاء
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> حفظ الصنف
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}