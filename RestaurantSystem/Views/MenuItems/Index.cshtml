@model IEnumerable<MenuItem>

@{
    ViewData["Title"] = "القائمة";
    var groupedItems = Model.GroupBy(m => m.Category.Name);
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-menu-button-wide"></i> قائمة الطعام
        </h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> إضافة صنف جديد
        </a>
    </div>
    @if (Model.Any())
    {
        @foreach (var group in groupedItems)
        {
            <div class="mb-5">
                <h2 class="border-bottom pb-2 mb-3">
                    <i class="bi bi-bookmark-fill text-primary"></i> @group.Key
                </h2>

                <div class="row">
                    @foreach (var item in group)
                    {
                        <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
                            <div class="card h-100 shadow-sm @(item.IsAvailable ? "" : "opacity-75")">
                                <div class="position-relative">
                                    <img src="@(item.ImageUrl ?? "https://picsum.photos/400/300?random=" + item.Id)"
                                         class="card-img-top"
                                         alt="@item.Name"
                                         style="height: 200px; object-fit: cover;">
                                    @if (!item.IsAvailable)
                                    {
                                        <div class="position-absolute top-0 end-0 m-2">
                                            <span class="badge bg-danger">غير متوفر</span>
                                        </div>
                                    }
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>
                                    <p class="card-text text-muted small">
                                        @if (item.Description?.Length > 60)
                                        {
                                            @item.Description.Substring(0, 60)
                            
                                            <text>...</text>
                                        }
                                        else
                                        {
                                            @item.Description
                                        }
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="h5 text-success mb-0">
                                            <i class="bi bi-cash"></i> @item.Price.ToString("C")
                                        </span>
                                        @if (item.IsAvailable)
                                        {
                                            <span class="badge bg-success">متوفر</span>
                                        }
                                    </div>
                                </div>
                                <div class="card-footer bg-white d-flex gap-2">
                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-primary flex-fill">
                                        <i class="bi bi-eye"></i> تفاصيل
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-inbox" style="font-size: 4rem;"></i>
            <h3 class="mt-3">لا توجد أصناف في القائمة حالياً</h3>
            <p>ابدأ بإضافة أصناف جديدة للقائمة</p>
            <a asp-action="Create" class="btn btn-success mt-2">
                <i class="bi bi-plus-circle"></i> إضافة صنف جديد
            </a>
        </div>
    }
</div>