@model Category

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-bookmark-fill text-primary"></i> @Model.Name
        </h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> تعديل الفئة
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> العودة
            </a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">الوصف:</h5>
            <p class="card-text">@Model.Description</p>
            <p class="text-muted">
                <i class="bi bi-box-seam"></i> عدد الأصناف:
                <span class="badge bg-info">@Model.MenuItems?.Count</span>
            </p>
        </div>
    </div>

    <h3 class="mb-3">
        <i class="bi bi-list-ul"></i> الأصناف في هذه الفئة:
    </h3>

    @if (Model.MenuItems != null && Model.MenuItems.Any())
    {
        <div class="row">
            @foreach (var item in Model.MenuItems)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <img src="@(item.ImageUrl ?? "https://picsum.photos/400/300?random=" + item.Id)"
                             class="card-img-top"
                             alt="@item.Name"
                             style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text text-muted small">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 text-success mb-0">@item.Price.ToString("C")</span>
                                @if (item.IsAvailable)
                                {
                                    <span class="badge bg-success">متوفر</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">غير متوفر</span>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-white">
                            <a asp-controller="MenuItems" asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-sm btn-primary w-100">
                                <i class="bi bi-eye"></i> عرض التفاصيل
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-4">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <h4 class="mt-3">لا توجد أصناف في هذه الفئة حالياً</h4>
            <a asp-controller="MenuItems" asp-action="Create" class="btn btn-primary mt-2">
                <i class="bi bi-plus-circle"></i> إضافة صنف جديد
            </a>
        </div>
    }
</div>