@model IEnumerable<Category>

@{
    ViewData["Title"] = "الفئات";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-grid-3x3-gap"></i> فئات القائمة
        </h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> إضافة فئة جديدة
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-inbox" style="font-size: 4rem;"></i>
            <h3 class="mt-3">لا توجد فئات حالياً</h3>
            <p>ابدأ بإضافة فئات للقائمة</p>
        </div>
    }

    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-primary">
                            <i class="bi bi-bookmark-fill"></i> @category.Name
                        </h5>
                        <p class="card-text text-muted">@category.Description</p>
                        <div class="mt-3">
                            <span class="badge bg-info">
                                <i class="bi bi-box-seam"></i> @category.MenuItems?.Count أصناف
                            </span>
                        </div>
                    </div>
                    <div class="card-footer bg-white d-flex gap-2">
                        <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm btn-primary flex-fill">
                            <i class="bi bi-eye"></i> عرض الأصناف
                        </a>
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    
</div>