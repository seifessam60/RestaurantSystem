@model IEnumerable<RestaurantSystem.Models.Table>

@{
    ViewData["Title"] = "الطاولات";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-table"></i> إدارة الطاولات
        </h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> إضافة طاولة جديدة
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var table in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
                    <div class="card h-100 shadow-sm @(table.IsAvailable ? "border-success" : "border-warning")">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="bi bi-table display-1 @(table.IsAvailable ? "text-success" : "text-warning")"></i>
                            </div>

                            <h3 class="card-title">طاولة رقم @table.TableNumber</h3>

                            <div class="mb-3">
                                @if (table.IsAvailable)
                                {
                                    <span class="badge bg-success fs-6">
                                        <i class="bi bi-check-circle"></i> متاحة
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark fs-6">
                                        <i class="bi bi-clock"></i> محجوزة
                                    </span>
                                }
                            </div>

                            <dl class="row text-start mb-0">
                                <dt class="col-6">
                                    <i class="bi bi-people"></i> السعة:
                                </dt>
                                <dd class="col-6">
                                    @table.Capacity أشخاص
                                </dd>

                                <dt class="col-6">
                                    <i class="bi bi-geo-alt"></i> الموقع:
                                </dt>
                                <dd class="col-6">
                                    @table.Location
                                </dd>
                            </dl>
                        </div>
                        <div class="card-footer bg-white">
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@table.Id"
                                   class="btn btn-sm btn-primary">
                                    <i class="bi bi-eye"></i> التفاصيل
                                </a>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@table.Id"
                                       class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i> تعديل
                                    </a>
                                    <form asp-action="ToggleAvailability" asp-route-id="@table.Id"
                                          method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm @(table.IsAvailable ? "btn-secondary" : "btn-success")">
                                            <i class="bi bi-arrow-repeat"></i> @(table.IsAvailable ? "حجز" : "تحرير")
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-inbox" style="font-size: 4rem;"></i>
            <h3 class="mt-3">لا توجد طاولات حالياً</h3>
            <a asp-action="Create" class="btn btn-success mt-2">
                <i class="bi bi-plus-circle"></i> إضافة طاولة جديدة
            </a>
        </div>
    }
</div>